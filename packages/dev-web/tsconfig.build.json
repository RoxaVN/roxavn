{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "CommonJS",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
